{% extends '::base.html.twig' %}

{% block body %}
    <section class="margin-bottom-50">
        <div class="user-menu">
            <div class="container">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 category-title">
                        {{ language }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row rix-categories">
                {% for i in 0..7 %}
                <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0 col-md-3">
                    <div class="rix-post" >
                        <div style="background-image:url('{{videos["body"]["data"][i]["pictures"]["sizes"][2]["link"]}}')">
                        </div>
                        <div class="rix-post-details">
                            <div class="post-tags">
                                {% for j in 0..2 %}
                                    {% if(videos["body"]["data"][i]["tags"]|length > j) %}
                                        <a href="#"> {{ videos["body"]["data"][i]["tags"][j]["name"]  }} </a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="post-title">
                                <a href="#">
                                    {{ videos["body"]["data"][i]["name"] }}
                                </a>
                            </div>
                            <div class="posted-by">
                                <a href="#">
                                    {{ videos["body"]["data"][i]["user"]["name"] }}
                                </a>
                                {% image '@CoreBundle/Resources/public/assets/img/plus.png' %}
                                    <img src="{{ asset_url }}"/>
                                {% endimage %}
                            </div>
                            <div class="posted-at">
                                {{ videos["body"]["data"][i]["created_time"] }}
                            </div>
                        </div>
                        <div class="author"></div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
