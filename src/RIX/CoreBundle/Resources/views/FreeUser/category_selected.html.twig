{% extends '::base.html.twig' %}

{% block body %}
    <section class="margin-bottom-50">
        <div class="user-menu">
            <div class="container">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 category-title">
                        {{ language }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 delimiter">
                    Videos
                </div>
            </div>
            <div class="row rix-categories">
                {% for i in 0..7 %}
                <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0 col-md-3">
                    <div class="rix-post" >
                        <a href="{{ path('rix_core_free_user_category_detail', {'language':language, 'api': 'vimeo', 'id':videos["body"]["data"][i]["uri"][8:]}) }}">
                            <div class="rix-category"
                                 style="background-image: url('{{videos["body"]["data"][i]["pictures"]["sizes"][2]["link"]}}')"></div>
                        </a>
                        <div class="rix-post-details">
                            <div class="post-tags">
                                {% for j in 0..2 %}
                                    {% if(videos["body"]["data"][i]["tags"]|length > j) %}
                                        <a href="{{ path('rix_core_free_user_category', {'language':videos["body"]["data"][i]["tags"][j]["name"]|trim}) }}">{{videos["body"]["data"][i]["tags"][j]["name"]}}</a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="post-title">
                                <a href="{{ path('rix_core_free_user_category_detail', {'language':language, 'api': 'vimeo', 'id':videos["body"]["data"][i]["uri"][8:]}) }}">
                                        {{ videos["body"]["data"][i]["name"] }}
                                </a>
                            </div>
                            <div class="posted-by">
                                <a href="#">
                                    {{ videos["body"]["data"][i]["user"]["name"] }}
                                </a>
                                {% image '@CoreBundle/Resources/public/assets/img/plus.png' %}
                                    <img src="{{ asset_url }}"/>
                                {% endimage %}
                            </div>
                            <div class="posted-at">
                                {{ videos["body"]["data"][i]["created_time"] }}
                            </div>
                        </div>
                        <div class="author"></div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-xs-12 delimiter">
                    Slides
                </div>
            </div>
            <div class="row rix-categories">
                {% for i in 0..7 %}
                <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0 col-md-3">
                    <div class="rix-post" >
                        <a href="{{ path('rix_core_free_user_category_detail', {'language':language, 'api': 'slide', 'id':slideshares[i]['ID']}) }}">
                            <div class="rix-category"
                             style="background-image: url('http://{{slideshares[i]['THUMBNAILXLARGEURL']}}')"></div>
                        </a>
                        <div class="rix-post-details">
                            <div class="post-tags">
                                {% set foo = slideshares[i]['TAG']|split(',') %}
                                {% for tag in foo %}
                                    <a href="{{ path('rix_core_free_user_category', {'language':tag|trim}) }}">{{tag}}</a>
                                {% endfor %}
                            </div>
                            <div class="post-title">
                                <a href="{{ path('rix_core_free_user_category_detail', {'language':language, 'api': 'slide', 'id':slideshares[i]['ID']}) }}">
                                    {% autoescape %}
                                        {{slideshares[i]['TITLE']|raw}}
                                    {% endautoescape %}
                                </a>
                            </div>
                            <div class="posted-by">
                                <a href="#">{{slideshares[i]['USERNAME']}}</a>
                                {% image '@CoreBundle/Resources/public/assets/img/plus.png' %}
                                <img src="{{ asset_url }}"/>
                                {% endimage %}
                            </div>
                            <div class="posted-at">{{ slideshares[i]['CREATED'] }}</div>
                        </div>
                        <div class="author"></div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
