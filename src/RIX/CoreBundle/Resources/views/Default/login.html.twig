{% extends '::base.html.twig' %}

{% block body %}

    <section>
        <div class="container container-min-height">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3" id="sign-in-wrapper">
                    <div>Sign in to Your Account</div>
                    <div>Don't have an account? <a href="{{ path('rix_core_user_register') }}">Create one now</a></div>
                    {% if error %}
                        <span class="errors">
                           The email or password you've entered doen't match any account.
                        </span>
                    {% endif %}
                    <form action="{{ path('rix_core_user_login') }}" method="post" class="user-form" role="form" novalidate>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="_username" placeholder="Enter email" />
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input  type="password" class="form-control" id="pwd" name="_password" placeholder="Enter password" />
                        </div>
                        <div class="button-wrapper">
                            <button type="submit" class="btn">Sign In</button>
                        </div>
                    </form>
                    <div class="text-align-center">
                        <a href="#">Forgotten your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
