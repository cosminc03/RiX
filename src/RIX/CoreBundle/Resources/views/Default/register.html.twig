{% extends '::base.html.twig' %}

{% block body %}
    <section>
        <div class="container container-min-height">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3" id="sign-in-wrapper">
                    <div>Create A Free Account</div>
                    <div>Already have an account? <a href="{{ path('rix_core_user_login') }}">Sign in</a></div>
                    <div>
                        <div>Become a member. Discover what you can learn</div>
                        <ul>
                            <li>Gain access to a full list of courses</li>
                            <li>Receive weekly notification about your favourite points of interest</li>
                            <li>Here about the latest articles & videos</li>
                            <li>Be part of a big community that shares it's knowledge</li>
                        </ul>
                    </div>
                    <div id="account-errors">
                            {% if form_errors(form.email) %}
                                <div>{{ form_errors(form.email) }}</div>
                            {% endif %}
                            {% if form_errors(form.plainPassword.first) %}
                                <div>{{ form_errors(form.plainPassword.first) }}</div>
                            {% endif %}

                    </div>
                    <form class="user-form" action="{{ path('rix_core_user_register') }}" method="POST" role="form" novalidate>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Enter email'} })}}
                        </div>
                        {% for passwordField in form.plainPassword %}
                            <div class="form-group">
                                {{ form_label(passwordField) }}
                                {{ form_widget(passwordField, { 'attr': {'class': 'form-control', 'placeholder': 'Enter password'} }) }}
                            </div>
                        {% endfor %}
                        {{ form_rest(form) }}

                        <div class="button-wrapper">
                            <button type="submit" class="btn">Create Account and Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
