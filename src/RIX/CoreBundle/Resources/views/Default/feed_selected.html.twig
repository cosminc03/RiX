{% extends '::base.html.twig' %}

{% block body %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="category-title">{{ res['0']['origin']['title'] }}</div>
                </div>
            </div>
            <div class="row rix-categories">
                {%  for i in 0..1 %}
                    <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0 col-md-3">
                        <div class="rix-post" >
                            {%   if res[i]['thumbnail']['0'] is defined    %}
                                <div style="background-image: url('https://www.dwolla.com/avatars/812-999-0092')"></div>
                            {% else %}
                                <div style="background-image: url('https://www.dwolla.com/avatars/812-999-0092')"></div>
                            {% endif %}
                            <div class="rix-post-details">
                                <div class="post-tags">

                                </div>
                                <div class="post-title">
                                    <a href="#">{{res[i]['title']}}</a>
                                </div>
                                <div class="posted-by">
                                    <a href="#">{{res[i]['author']}}</a>
                                    {% image '@CoreBundle/Resources/public/assets/img/plus.png' %}
                                    <img src="{{ asset_url }}"/>
                                    {% endimage %}
                                </div>
                                {% set data= res[i]['published']/1000  %}
                              <div class="posted-at"> {{ data }} </div>
                            </div>
                            <div class="author"></div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
