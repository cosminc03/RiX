{% extends '::base.html.twig' %}

{% block body %}

    <section class="margin-bottom-30">
        <div class="user-menu">
            <div class="container">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 category-title">
                        {{ language }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="margin-bottom-30">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Filter by type
                            <span class="caret"></span></button>
                        <ul class="dropdown-menu filter-by-type">
                            <li><a href="#" data-link="{{ path('rix_core_user_get_language_type', {'language': language, 'type': 'article' }) }}">Article</a></li>
                            <li><a href="#" data-link="{{ path('rix_core_user_get_language_type', {'language': language, 'type': 'slides' }) }}">Slides</a></li>
                            <li><a href="#" data-link="{{ path('rix_core_user_get_language_type', {'language': language, 'type': 'video' }) }}">Video</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--<section id="div-test">Test</section>-->
    <section>
        <div class="container" id="div-test">
            <div class="row rix-categories">
                {% for i in 0..15 %}
                <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-0 col-md-3">
                    <div class="rix-post" >
                        <a href="{{ path('rix_detailed', {'language': language , 'api' : 'vimeo' , 'title': videos["body"]["data"][i]["name"] }) }}">
                        <div class="rix-category" style="background-image:url('{{videos["body"]["data"][i]["pictures"]["sizes"][2]["link"]}}')">
                            </div>
                        </a>

                        <div class="rix-post-details">
                            <div class="post-tags">
                                {% for j in 0..2 %}
                                    {% if(videos["body"]["data"][i]["tags"]|length > j) %}
                                        <a href="#"> {{ videos["body"]["data"][i]["tags"][j]["name"]  }} </a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="post-title">
                                <a href="#">
                                    {{ videos["body"]["data"][i]["name"] }}
                                </a>
                            </div>
                            <div class="posted-by">
                                <a href="#">
                                    {{ videos["body"]["data"][i]["user"]["name"] }}
                                </a>
                                {% image '@CoreBundle/Resources/public/assets/img/plus.png' %}
                                    <img src="{{ asset_url }}"/>
                                {% endimage %}
                            </div>
                            <div class="posted-at">
                                {{ videos["body"]["data"][i]["created_time"] }}
                            </div>
                        </div>
                        <div class="author"></div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
